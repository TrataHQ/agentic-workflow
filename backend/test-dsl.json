{
    "name": "Sheik",
    "description": "Sheik",
    "version": "1.0.0",
    "steps": {
        "step1": {
            "stepId": "step1",
            "appConnectionId": "slack_con",
            "appId": "app.123",
            "appName": "Slack",
            "appVersion": "1.0.0",
            "stepPayload": {
                "actionType": "ACTION",
                "name": "send_message",
                "description": "Send a message to a user",
                "dataSchema": {
                    "type": "object",
                    "properties": {
                        "channel": {"type": "string"},
                        "message": {"type": "string"}
                    }
                },
                "uiSchema": {
                    "channel": {"ui:widget": "select"}
                },
				"uiNodeType": "ACTION"
            },
            "dataResolver": "{\"channel\": \"Sales Team Channel\",\"message\": \"hi\" & stepInput.step1.channel  & \"this is a message\" & stepInput.step1.name }",
            "nextStepResolver": {
                "conditions": [
                    {
                        "when": "triggerPayload.price > 100",
                        "stepId": "step1"
                    },
                    {
                        "when": "triggerPayload.price < 100",
                        "stepId": "step1"
                    },
                    {
                        "when": "triggerPayload.price = 100",
                        "stepId": "step1"
                    },
                    {
                        "when": "true",
                        "stepId": "step1"
                    }
                ]
                
            }
        }
    },
    "startStepId": "step1"
}